{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2022",
    "lib": ["es2018", "dom", "dom.iterable"],
    "paths": {
      "ll-cart": ["projects/ll-cart/src"],
      "ll-shared": ["projects/ll-shared/src"],
      "ll-error": ["projects/ll-error/src"],
      "ll-hover": ["projects/ll-hover/src"],
      "ll-load-more": ["projects/ll-load-more/src"],
      "ll-loading-bar": ["projects/ll-loading-bar/src"],
      "ll-masonry": ["projects/ll-masonry/src"],
      "ll-search": ["projects/ll-search/src"],
      "ll-slide": ["projects/ll-slide/src"],
      "@rajansolanki/ll-cart": ["dist/ll-cart"],
      "@rajansolanki/ll-shared": ["dist/ll-shared"],
      "@rajansolanki/ll-error": ["dist/ll-error"],
      "@rajansolanki/ll-hover": ["dist/ll-hover"],
      "@rajansolanki/ll-load-more": ["dist/ll-load-more"],
      "@rajansolanki/ll-loading-bar": ["dist/ll-loading-bar"],
      "@rajansolanki/ll-masonry": ["dist/ll-masonry"],
      "@rajansolanki/ll-search": ["dist/ll-search"],
      "@rajansolanki/ll-slide": ["dist/ll-slide"],
      "routes": ["./src/app/routes"]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": false,
    "strictInjectionParameters": true,
    "strictTemplates": true
  }
}
